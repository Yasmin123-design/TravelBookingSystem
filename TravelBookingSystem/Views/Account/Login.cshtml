@model TravelBookingSystem.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mb-2">Login</h1> <!-- قلل المسافة السفلية mb-2 -->

<div class="d-flex justify-content-center align-items-start vh-100 mt-0">
    <div class="col-md-4">
        <form asp-action="Login" class="mt-0">
            <!-- أضفت mt-0 لإزالة المسافة العلوية -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
        <div class="text-center mt-2">
            <!-- قللت المسافة العلوية -->
            <a asp-action="Register">Register</a>
        </div>
        <div class="text-center mt-2">
            <!-- قللت المسافة العلوية -->
            <a asp-action="ForgetPassword" asp-controller="Account">Forget Password</a>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<style>
    /* تقليل المسافات بين الحقول */
    h1, .form-group {
        margin-bottom: 10px !important; /* فرض مسافة سفلية صغيرة */
    }

    .form-check {
        margin-bottom: 10px !important; /* فرض مسافة سفلية صغيرة */
    }

    .vh-100 {
        height: 50vh !important; /* تقليل الارتفاع الكلي */
    }
</style>
