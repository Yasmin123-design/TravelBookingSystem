@model TravelBookingSystem.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mb-2">Register</h1> <!-- قلل المسافة السفلية mb-2 -->

<div class="d-flex justify-content-center align-items-start vh-100 mt-0">
    <div class="col-md-4">
        <form asp-action="Register" class="mt-0">
            <!-- أضفت mt-0 لإزالة المسافة العلوية -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="password" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <!-- قللت المسافة السفلية -->
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" type="password" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary btn-block" />
                <a asp-controller="Account" asp-action="Login" class="btn btn-link">Sign In</a>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<style>
    /* تقليل المسافات بين الحقول */
    h1, .form-group {
        margin-bottom: 10px !important; /* فرض مسافة سفلية صغيرة */
    }

    .vh-100 {
        height: 50vh !important; /* تقليل الارتفاع الكلي */
    }
</style>
